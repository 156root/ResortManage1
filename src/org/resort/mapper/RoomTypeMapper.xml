<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.resort.dao.RoomTypeDao">
    <resultMap id="roomTypeMap" type="org.resort.entity.RoomType">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="descriptor" column="descriptor"/>
    </resultMap>
    <delete id="delOneEntityById">
        DELETE from roomtype where id=#{id}
    </delete>
    <insert id="addOneEntity">
        INSERT into roomtype(name,"descriptor")
        VALUES (#{entity.name},#{entity.descriptor})
    </insert>
    <select id="getEntityById" resultMap="roomTypeMap">
        select id,name,descriptor from roomtype WHERE id=#{id}
    </select>
    <select id="getAllEntity" resultMap="roomTypeMap">
        select id,name,descriptor from roomtype
    </select>
</mapper>